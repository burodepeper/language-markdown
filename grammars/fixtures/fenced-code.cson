# NOTE
# No 'name' attribute prevents this Grammar file from showing up in the Grammar selection

scopeName: "fenced-code.md"

# Objects in {list} have the following structure:
#
# {
#   pattern: {string}
#   include: {string}
#   contentName: {string}
# }
#
# 'pattern' is required; item is ignored if 'pattern' is missing
# If 'include' is omitted, 'include' will become 'source.'+pattern
# If 'contentName' is omitted, 'contentName' will become 'embedded.'+pattern

# NOTE
# Keep this list alphabetized

list: [
  { pattern:'apib|apiblueprint', include:'text.html.markdown.source.gfm.apib' }
  { pattern:'ass' }
  { pattern:'coffee|coffeescript|coffee-script', include:'source.coffee' }
  { pattern:'c' }
  { pattern:'clojure' }
  { pattern:'cpp|c\\+\\+', include:'source.cpp' }
  { pattern:'cr|crystal', include:'source.crystal'}
  { pattern:'cs|csharp', include:'source.cs' }
  { pattern:'css' }
  { pattern:'diff|patch|rej', include:'source.diff' }
  { pattern:'elixir' }
  { pattern:'elm' }

  # { pattern:'ecr', include:'source.crystal', contentName:'text.html.ecr'}
  # { pattern:'erb', include:'source.ruby', contentName:'text.html.erb' }

  { pattern:'erlang' }
  { pattern:'go|golang', include:'source.go' }
  { pattern:'haskell' }
  { pattern:'html', include:'text.html.basic' }
  { pattern:'java' }
  { pattern:'javascript|js|jsx', include:'source.js' }
  { pattern:'json|har', indclude:'source.json' }
  { pattern:'julia' }
  { pattern:'less' }
  { pattern:'lua' }
  { pattern:'markdown|mdown|md', include:'text.md' }
  { pattern:'mermaid' }
  { pattern:'mson', include:'text.html.markdown.source.gfm.mson' }
  { pattern:'objc|objective-c', include:'source.objc' }

  # { pattern:'php' }
  # { pattern:'php', contentName:'text.html.php' }
  # { pattern:'php', include:'text.html.php' }
  # { pattern:'php', include:'text.html.basic', contentName:'embedded.text.html.php' }
  # { pattern:'php', include:'text.html.basic' }
  # { pattern:'php', include:'text.html.php', contentName:'source.js.embedded.html' }

  { pattern:'py|python', include:'source.python' }
  { pattern:'r' }
  { pattern:'ruby' }
  { pattern:'rust|rs', include:'source.rust' }
  { pattern:'sass' }
  { pattern:'scss', include:'source.css.scss' }
  { pattern:'sh|bash', include:'source.shell' }
  { pattern:'sql' }
  { pattern:'swift' }
  { pattern:'xml', include:'text.xml' }
  { pattern:'yaml|yml', include:'source.yaml' }

  # Fallback that detects any unsupported languages;
  # Pattern might have to accept more characters.
  {
    pattern: '[a-zA-Z0-9-_]+'
    include: 'source'
    patternName: 'embedded.source'
  }
]
