key: 'github-blocks'
patterns: [

  # Tables
  {
    name: 'table.storage.md'
    match: '^(\\|)(?=[ :])(.+)$'
    captures:
      1: name: 'punctuation.md'
      2:
        patterns: [
          {
            match: '(?<=[ :])\\|(?=$|[ :])'
            name: 'punctuation.md'
          }
          {
            match: '(:?)(-+)(:?)'
            captures:
              1: name: 'alignment.punctuation.meta.md'
              2: name: 'punctuation.md'
              3: name: 'alignment.punctuation.meta.md'
          }
          {
            include: '#inlines-in-blocks'
          }
        ]
      3: name: 'punctuation.md'
  }

]
