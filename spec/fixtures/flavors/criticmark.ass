  source.text.md {
    highlight.critic.changed.markup.md {
      "{==": punctuation.md
      "Yellow marker"
      "==}": punctuation.md
    }
  }
}

@5b
"{==Yellow marker==}{>>@burodepeper<<}" {
  source.text.md {
    "{==Yellow marker==}" {
      highlight.critic.changed.markup.md {
        "{==": punctuation.md
        "Yellow marker"
        "==}": punctuation.md
      }
    }
    "{>>@burodepeper<<}" {
      comment.critic.markup.md {
        "{>>": punctuation.md
        "@burodepeper" {
          username.reference.variable.md {
            "@": punctuation.md
            "burodepeper"
          }
        }
        "<<}": punctuation.md
      }
    }
  }
}
