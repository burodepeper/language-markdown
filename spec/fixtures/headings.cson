expect(tokens[1][1]).toEqual value: ' ', tokens: ['text.md', 'heading.md', 'heading-2.md']
expect(tokens[1][2]).toEqual value: 'foo', tokens: ['text.md', 'heading.md', 'heading-2.md']
expect(tokens[2][0]).toEqual value: '****', tokens: ['text.md', 'hr.md']



